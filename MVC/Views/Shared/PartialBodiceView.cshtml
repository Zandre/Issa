@model BookALook.Classes.Bodice

<div class="form-group">
    <div class="col-md-4">
        <img width="100" height="150" style="border-radius: 8px" title="Bodice - @Model.Name" src="data:image; base64, @Convert.ToBase64String(Model.ImageData)" />
    </div>
    <div class="col-md-8">
        <h2 style="width: 100%">@Model.Name</h2>
        <h4 style="width: 100%">R @Model.Price</h4>
        <p style="width: 100%" class="text-info">@Model.Description</p>
    </div>
</div>
