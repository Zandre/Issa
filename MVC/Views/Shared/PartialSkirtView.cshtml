@model BookALook.Classes.Skirt

<div class="form-group" style="width: 100%">
    <div style="width: 100%; display: inline-block; vertical-align: top">
        <div style="float: left; width: 20%; padding-right: 15pt; padding-left: 10pt; padding-bottom: 1pt; padding-top: 1pt">
            @if (Model != null)
            {
                if (Model.ImageData == null)
                {
                    <img width="100" height="180" style="border-radius: 8px" title="Skirt - @Model.Name" src="~/Content/Images/Skirts/defaultSkirt.JPG">
                }
                else
                {
                    <img width="100" height="180" style="border-radius: 8px" title="Skirt - @Model.Name" src="data:image; base64, @Convert.ToBase64String(Model.ImageData)" />
                }
            }
            else
            {
                <img width="100" height="180" style="border-radius: 8px" title="Skirt" src="~/Content/Images/Skirts/defaultSkirt.JPG">
            }
        </div>
        <div style="float: right; width: 60%">
            <h2 style="width: 100%">@Model.Name</h2>
            <h4 style="width: 100%">R @Model.Price</h4>
            <p style="width: 100%" class="text-info">@Model.Description</p>
        </div>
    </div>
</div>
